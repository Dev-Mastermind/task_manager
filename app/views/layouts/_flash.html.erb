<% if notice %>
  <div class="fixed top-4 right-4 z-50 px-4 py-2 bg-green-100 border border-green-400 text-green-700 rounded shadow-lg transition-opacity duration-300" data-controller="flash" data-flash-target="element">
    <%= notice %>
  </div>
<% end %>

<% if alert %>
  <div class="fixed top-4 right-4 z-50 px-4 py-2 bg-red-100 border border-red-400 text-red-700 rounded shadow-lg transition-opacity duration-300" data-controller="flash" data-flash-target="element">
    <%= alert %>
  </div>
<% end %>