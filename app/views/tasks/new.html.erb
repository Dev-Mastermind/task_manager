<% content_for :title, "New Task" %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="flex justify-between items-center mb-8 border-b pb-4">
    <h1 class="text-3xl font-bold text-gray-800">Create New Task</h1>
    <%= link_to tasks_path, class: "flex items-center text-sm font-medium text-gray-600 hover:text-gray-900 transition-colors" do %>
      <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1" viewBox="0 0 20 20" fill="currentColor">
        <path fill-rule="evenodd" d="M9.707 16.707a1 1 0 01-1.414 0l-6-6a1 1 0 010-1.414l6-6a1 1 0 011.414 1.414L5.414 9H17a1 1 0 110 2H5.414l4.293 4.293a1 1 0 010 1.414z" clip-rule="evenodd" />
      </svg>
      Back to tasks
    <% end %>
  </div>

  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-6 sm:p-8">
      <%= render "form", task: @task %>
    </div>
  </div>
</div>