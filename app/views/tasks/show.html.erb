<% content_for :title, @task.title %>

<div class="max-w-4xl mx-auto px-4 py-8">
  <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
    <div class="p-6 sm:p-8 border-b border-gray-200 flex flex-col sm:flex-row justify-between gap-6">
      <div class="flex-1 min-w-0">
        <h1 class="text-2xl font-bold text-gray-800 truncate"><%= @task.title %></h1>
        
        <% if @task.description.present? %>
          <p class="mt-3 text-gray-600"><%= @task.description %></p>
        <% end %>
      </div>
      
      <% if @task.image.attached? %>
        <div class="flex-shrink-0 sm:w-48 sm:h-48 w-full h-full">
          <%= image_tag @task.image, class: "w-full h-full object-cover rounded-md border border-gray-200" %>
        </div>
      <% end %>
    </div>

    <div class="p-6 sm:p-8 space-y-4">
      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
        </svg>
        <div>
          <p class="text-sm text-gray-500">Due Date</p>
          <p class="text-gray-700"><%= @task.due_date.strftime("%B %d, %Y") %></p>
        </div>
      </div>

      <div class="flex items-center">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400 mr-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
        <div>
          <p class="text-sm text-gray-500">Status</p>
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium <%= @task.completed ? 'bg-green-100 text-green-800' : 'bg-amber-100 text-amber-800' %>">
            <%= @task.completed ? 'Completed' : 'Pending' %>
          </span>
        </div>
      </div>
    </div>

    <div class="px-6 sm:px-8 py-4 bg-gray-50 border-t border-gray-200 flex flex-wrap justify-end gap-3">
      <%= link_to edit_task_path(@task), class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Task
      <% end %>
      
      <%= link_to tasks_path, class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md shadow-sm text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Tasks
      <% end %>
      
      <%= button_to @task, method: :delete, data: { turbo_confirm: "Are you sure you want to delete this task?" }, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-red-600 hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
        </svg>
        Delete Task
      <% end %>
    </div>
  </div>
</div>